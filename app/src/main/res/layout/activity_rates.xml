<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayoutRates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    tools:context="ru.example.mike.ladlampeconomist.RatesActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/rate1"
            android:id="@+id/textViewRate1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_span="2" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text1"
            android:gravity="center"
            android:layout_span="2"
            android:id="@+id/textView"
            android:layout_below="@+id/textViewRate1"
            android:layout_centerHorizontal="true" />
    </TableRow>

    <TableRow>
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id = "@+id/spinnerOne"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_weight="1"
            android:entries="@array/spinner1"/>
        <Spinner
            android:id = "@+id/spinnerTwo"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_weight="1"
            android:entries="@array/spinner2"/>


    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text2"
            android:gravity="center"
            android:layout_span="2"
            android:id="@+id/textView2"
            android:layout_below="@+id/textViewRate1"
            android:layout_centerHorizontal="true" />
    </TableRow>

    <TableRow>
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id = "@+id/spinnerHours"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:layout_weight="1"
            android:entries="@array/spinner2"/>

    </TableRow>



    <TableRow>
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_ago"
            android:id="@+id/buttonAgo"
            android:layout_marginBottom="96dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:onClick="onClickAgo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_forward"
            android:id="@+id/buttonForward"
            android:layout_alignTop="@+id/buttonAgo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:onClick="onClickForward" />
    </TableRow>

</TableLayout>

